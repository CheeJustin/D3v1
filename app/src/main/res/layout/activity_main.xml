<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.justin.d3.Main">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:rowCount="5"
        android:columnCount="4"
        android:useDefaultMargins="true">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#edf"
            android:layout_row="0"
            android:layout_column="0"
            android:text="I am 0,0"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:layout_row="4"
            android:layout_column="0"
            android:text="profile"
            android:textColor="#fff"
            android:onClick="goToProfile"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#fde"
            android:layout_row="0"
            android:layout_column="1"
            android:text="I am 0,1"
            android:layout_gravity="fill_horizontal"/>
        <!--
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#efd"
            android:layout_row="0"
            android:layout_column="2"
            android:text="I am 0,2"/> -->
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:layout_column="3"
            android:text="compass"
            android:textColor="#fff"
            android:onClick="goToGPS"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:progress="75"
            android:layout_columnSpan="2"/>
        <TextView
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedometer"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#def"
            android:layout_row="1"
            android:layout_column="3"
            android:text="I am 1,3"
            android:layout_gravity="fill_vertical"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#acf"
            android:layout_row="3"
            android:layout_column="3"
            android:text="I am 3,3"
            android:layout_gravity="fill_vertical"/>

        <!--
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#bad"
            android:layout_row="3"
            android:layout_column="2"
            android:text="I am 3,2"/>
            -->
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:layout_row="4"
            android:layout_column="3"
            android:text="shop"
            android:textColor="#fff"
            android:onClick="goToShop" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/silencers"/>
    </GridLayout>



</RelativeLayout>
